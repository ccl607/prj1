    </logger>
    
    <logger name="javax.sql">
    	<level value="debug"/>
    </logger>

    <logger name="jdbc.sqltiming">
        <level value="info" />
    </logger>

    <logger name="jdbc.audit">
        <level value="info" />
    </logger>

